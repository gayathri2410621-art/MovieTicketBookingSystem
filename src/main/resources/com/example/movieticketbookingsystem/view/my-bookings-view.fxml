                <Label text="My Bookings" textFill="white">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>

                <!-- Add refresh button -->
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
