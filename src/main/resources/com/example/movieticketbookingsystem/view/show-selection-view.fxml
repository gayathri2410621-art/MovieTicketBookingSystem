<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.movieticketbookingsystem.view.ShowSelectionController"
            prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="â† Back" onAction="#handleBack"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 20; -fx-background-radius: 5;"/>

                <Label text="Select Show" textFill="white">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" fx:id="moviesContainer">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                <!-- Movies will be dynamically added here -->
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
